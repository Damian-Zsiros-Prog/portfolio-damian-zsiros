---
import SectionContainer from "../../SectionContainer.astro"
import { projects } from "../../../data.json"
import Project from "../../Project.astro"
---

<SectionContainer title="Trabajos con relevancia" id="lastWorksSection" animate>
  <section class="flex flex-col justify-center">
    <main
      class="grid gap-[2rem] grid-cols-[repeat(auto-fit,minmax(200px,1fr))] md:grid-cols-[repeat(auto-fit,minmax(250px,1fr))] place-items-center"
    >
      {
        projects
          .filter((project) => project.work)
          .map((project) => <Project project={project} />)
      }
    </main>
  </section>
</SectionContainer>
