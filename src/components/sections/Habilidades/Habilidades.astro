---
import SectionContainer from "../../SectionContainer.astro";
import { habilidades } from "../../../data.json";
---

<SectionContainer title="Habilidades" id="habilidadesSection">
  <section class="flex flex-wrap justify-center gap-6 items-center transition bg-white rounded-lg py-4">
    {
      habilidades.map((habilidad) => (
        <a
          href={habilidad.linkOficial || null}
          target="_blank"
          rel="noopener noreferrer"
          class="hover:scale-110 transition text-center [&>span]:hover:opacity-100"
        >
          <img
            src={habilidad.img}
            alt={habilidad.name}
            title={habilidad.name}
            class="h-[100px] object-cover hover:rounded-lg  transition p-2 "
          />
          <span class="text-black text-center opacity-0 text-lg m-auto transition">{habilidad.name}</span>
        </a>
      ))
    }
  </section>
</SectionContainer>
